{% extends layout('default') %}

{% block content %}
    <div id="posts">

        <header>
            <h1>{{ trans('anomaly.module.posts::message.tagged', {'tag': tag}) }}</h1>
            <br />
        </header>

        <hr />

        {% set posts = entries('posts').whereTags('LIKE', '%"' ~ route_parameter('tag') ~ '"%').paginate() %}

        {% include "theme::partials/posts/items" with {"posts": posts} %}

        {{ posts.links|raw }}

    </div>
{% endblock %}
