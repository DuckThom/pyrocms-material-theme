{% extends layout('default') %}

{% block content %}
    <div id="posts">
        <header>
            <h1>{{ category.title }}</h1>

            {% if category.description %}
                <p>{{ category.description|raw }}</p>
            {% endif %}
        </header>

        <hr />

        {% set posts = category.posts().live().paginate() %}

        {% include "theme::partials/posts/items" with {"posts": posts} %}

        {{ posts.links|raw }}
    </div>
{% endblock %}
